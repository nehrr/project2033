<section class="hero is-fullheight is-info info">

  <div class="hero-body profil">
    <div class="container update has-text-centered profil">

      <h1>
        Edit profile
      </h1>

      <h3 class="title is-2">
        Information
      </h3>

      <form id="edit-user" method="POST" action="/edit-user" enctype="application/json">

        <div class="field">
          <label class="label has-text-left">Username</label>
          <div class="control">
            <input name="username" class="input is-large" type="text" placeholder="<%= user.username %>" autofocus="" />
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label has-text-left">Firstname</label>
            <input name="firstname" class="input is-large" type="text" placeholder="<%= user.firstname %>" />
          </div>
        </div>

        <div class="field">
          <label class="label has-text-left">Lastname</label>
          <div class="control">
            <input name="lastname" class="input is-large" type="text" placeholder="<%= user.lastname %>" autofocus="" />
          </div>
        </div>

        <div class="field">
          <label class="label has-text-left">Email</label>
          <div class="control">
            <input name="email" class="input is-large" type="text" placeholder="<%= user.email %>" autofocus="" />
          </div>
        </div>

        <div class="field">
          <label class="label has-text-left">Birthdate</label>
          <div class="control">
            <input name="birthdate" class="input is-large" type="date" autofocus="" />
          </div>
        </div>

        <div class="field">
          <label class="label has-text-left">Password</label>
          <div class="control">
            <input name="password" class="input is-large" type="password" placeholder="*****" autofocus="" />
          </div>
        </div>

        <a class="button is-block is-info is-large is-success update-button" onclick="document.getElementById('edit-user').submit();" href="/user/profil" >
          Edit your profile
        </a>

      </form>

    </div>
  </div>
