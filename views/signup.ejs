<!DOCTYPE html>
<html>

<div class="hero-body">
  <div class="container has-text-centered">
    <div class="column is-4 is-offset-4">
      <h3 class="title">#create</h3>
      <div class="box">
        <figure class="avatar">
          <img src="./assets/img/darkvador.png" />
        </figure>
        <form id="mForm" method="POST" action="/add-user" enctype="application/json">
          <div class="field">
            <label class="label has-text-left">Fullname</label>
            <div class="control">
              <input name="fullname" class="input is-large" type="text" placeholder="Walter White" autofocus="" />
            </div>
          </div>
          <div class="field">
            <div class="control">
              <label class="label has-text-left">Age</label>
              <input name="age" class="input is-large" type="number" placeholder="42" />
            </div>
          </div>
          <a class="button is-block is-info is-large is-success" onclick="document.getElementById('mForm').submit();" >
            Add a user
          </a>
        </form>
      </div>
      <a href="/">Go To Index</a>
    </div>
  </div>
</div>
